<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz"
    tools:context="com.agusbudiprastono.finaliak32.FinishActivity">
    <TextView
        android:id="@+id/Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Final IAK 3.2"
        android:textColor="#FF0000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Judul"
        android:layout_centerHorizontal="true"
        android:text="by Agus Budi Prastono"
        android:textColor="#ef6808"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Copyright"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:text="Selamat Anda Telah Berhasil \n menyelesaikan kuis ini... :)"
        android:textColor="#FF9900"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="115dp"
            android:layout_height="38dp"
            android:background="@drawable/ulang"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="350dp"
            android:id="@+id/ib1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@drawable/k"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="350dp"
            android:id="@+id/ib2"/>
    </LinearLayout>

</RelativeLayout>
